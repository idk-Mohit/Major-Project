<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://bootswatch.com/4/journal/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/reset.css">
    <link rel="stylesheet" href="../css/theme.css">
    <link rel="stylesheet" href="../css/index.css">
    <link rel="stylesheet" href="../css/messages.css">
    <link rel="stylesheet" href="../css/user_appointment.css">
    <link rel="stylesheet" href="../css/update_appointment.css">
    <link rel="stylesheet" href="">
    <link rel="icon" type="image/x-icon" href="../images/weblogo.png">
    <title>Tvastra | <%= user.name %></title>
</head>
<body>
<!-- header -->
<%- include("./partials/header") %>
<!-- header -->
<%- include("./partials/messages") %>

  <% let arr = user.appointments %>
   <% let result = arr.filter((e)=>{ %>
     <% return e._id == update_appoint; %>
   <% }) %>
   <% result = result[0] %>
<section class="update-main-section">
  <div class="appointment-tab">
    <form class="appointment-tab-form" action="Updated_Appointment" method="POST">
        <div class="appointment-tab-left">
        <span>
          <label for="appointment_id">Appointment ID</label>
          <input type="text" id="appointment_id" name="appointment_id" value="<%= result._id %>" readonly>
        </span>
        <hr>
        <span>
          <label for="appoitment_date">Appointment Date <i class="fas fa-pen" style="color: var(--blue);" ></i></label>
          <input type="text" id="appointment_date" name="appointment_date" value="<%= result.appointment_date  %>" style="color: red;">
        </span>
        <hr>
        <span>
          <label for="appointment_status">Appointment Status</label>
          <input type="text"  id="appointment_status" name="appointment_status" value="<%= result.appointment_status %>" readonly>
        </span>
        <hr>
        </div>
        <div class="appointment-tab-right">
          <span>
            <label for="Doctor">Doctor Name</label>
            <input type="text" id="Doctor" name="doctor" value="<%= result.doctor %>" readonly>
          </span>
          <hr>
          <span>
            <label for="Doctor">Hospital Name</label>
            <input type="text" id="hospital" name="hospital" value="<%= result.hospital %>" readonly>
          </span>
          <hr>
          <span>
            <label for="Doctor">Doctor's Speciality</label>
            <input type="text" id="Speciality" name="Speciality" value="<%= result.speciality %>" readonly>
          </span>
          <hr>
        </div>
        <button type="submit">Update Changes</button>
  </form>
  </div>
</section>


<!-- footer -->
<%- include("./partials/footer") %>
<!-- fotter -->
</body>
<script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
